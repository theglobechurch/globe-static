---
---
{% set parentPage = p | pageParent(pages) %}
{% set childPages = p | pageChildren(pages) | sort(false, false, 'menu_order') %}
{% if parentPage %}
{% set siblingPages = parentPage | pageChildren(pages) | sort(false, false, 'menu_order') %}
{% endif %}

<main class="mt-12 px-4">
  <header class="mx-auto lg:container mb-4">

    {% if p.featured_img_url %}
    <div class="sm:aspect-[16/7] w-full sm:bg-cover sm:bg-center sm:overflow-hidden sm:relative">
      {% rwdImg p.featured_img_url, "", [550, 1024, 1512, 2056], "sm:inset-0 sm:absolute sm:h-full sm:object-cover", "100vw", false %}
      <div class="px-4 pt-4 sm:absolute sm:inset-0 bg-gradient-to-b from-transparent via-white/20 to-white sm:flex sm:flex-col sm:justify-end sm:items-start">
        {% if parentPage %}
          <a href="/{{ parentPage.url }}" class=" flex gap-1 items-center group">
            {% svgIcon "icon-arrowLeft", "shrink-0 h-4 w-4 transition group-hover:-translate-x-2", "Date" %}
            <span>{{ parentPage.title }}</span>
          </a>
        {% endif %}
        <h1 class="glbHeading">{{ title }}</h1>
      </div>
    </div>
    {% else %}
      {% if parentPage %}
        <a href="/{{ parentPage.url }}" class="px-4 flex gap-1 items-center group">
          {% svgIcon "icon-arrowLeft", "shrink-0 h-4 w-4 transition group-hover:-translate-x-2", "Date" %}
          <span>{{ parentPage.title }}</span>
        </a>
      {% endif %}
      <h1 class="px-4 glbHeading">{{ title }}</h1>
    {% endif %}
  </header>

  {% set augLocation = "top" %}
  {% include 'blocks/augmentedPages.njk' %}


  <div class="mx-auto lg:container">
    <article class="px-4 prose prose-globeBlue">
      {{ p.body | safe }}
    </article>
  </div>

</main>

{% set augLocation = "bottom" %}
{% include 'blocks/augmentedPages.njk' %}

{% if childPages | length > 0 or parentPage | length > 0 %}
<div class="mt-12 px-4">

  <div class="m-4 mx-auto lg:container">
    <div class="border-b pb-4">
      <h2 class="px-4 glbHeading">Where next?</h2>
    </div>

    <div class="w-full grid grid-cols-1 divide-y divide-orange/30 lg:grid-cols-2 gap-x-4">

    {% if childPages | length > 0 %}
      {% for page in childPages %}
        <a href="/{{page.url}}" class="p-4 no-underline flex justify-between hover:underline">
          <div class="uppercase font-bold">{{ page.title }}</div>
          <div class="hidden sm:block">More information</div>
        </a>
      {% endfor %}
    {% endif %}

    {% if parentPage %}
      <a href="/{{ parentPage.url }}" class="p-4 no-underline flex justify-between hover:underline">
        <div class="uppercase font-bold">{{ parentPage.title }}</div>
        <div class="hidden sm:block">More information</div>
      </a>

      {% if siblingPages | length > 0 %}
        {% for page in siblingPages %}
          {% if page.url != p.url %}
          <a href="/{{page.url}}" class="p-4 no-underline flex justify-between hover:underline">
            <div class="uppercase font-bold">{{ page.title }}</div>
            <div class="hidden sm:block">More information</div>
          </a>
          {% endif %}
        {% endfor %}
      {% endif %}

    {% endif %}

    </div>
  </div>
</div>
{% endif %}
