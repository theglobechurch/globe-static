<!doctype html>
<html lang="en" dir="ltr" class="scroll-smooth">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">

    <link rel="stylesheet" href="/_assets/css/tw.css?v={{ data.timestamp }}" media="screen" type="text/css">

    {% set pageTitle %}
      {% if title %}{{ title | safe }} &middot; {% endif %}{{ meta.title }}
    {% endset %}
    {% set pageDescription %}
      {% if description %}
        {{ description }}
      {% else %}
        {{ content | striptags | truncate(256) }}
      {% endif %}
    {% endset %}
    {% set pageImg %}
      {% if featuredImage %}
        {% socialImg featuredImage %}
      {% else %}
        https://globe.church/_assets/img/the-globe-church-og.jpg
      {% endif %}
    {% endset %}

    <title>{{ pageTitle | safe | trim }}</title>
    <meta name="description" content="{{ pageDescription | trim }}" />
    <meta itemprop="description" content="{{ pageDescription | trim }}">
    <meta property="og:site_name" content="{{ meta.title }}" />
    <meta property="og:title" content="{{ pageTitle | safe | trim }}" />
    <meta property="og:url" content="https://globe.church{{ page.url }}"/>
    <meta property="og:description" content="{{ pageDescription | trim }}"/>
    <meta property="og:type" content="website"/>
    {% if featuredImage %}<meta property="og:image" content="https://globe.church{% socialImg featuredImage %}"/>
    {% else %}<meta property="og:image" content="https://globe.church/_assets/img/the-globe-church-og.jpg"/>{% endif %}
    <meta property="og:locale" content="en_GB" />
    <link rel="icon" href="/favicon.ico" sizes="any">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="application-name" content="{{ meta.title }}"/>
    <meta name="theme-color" content="#d06348">

    <link rel="preconnect" href="https://use.typekit.net"/>

    <meta name="generator" content="{{ eleventy.generator }}"/>
    <link rel="author" href="/humans.txt"/>

    <link rel="me" href="https://instagram.com/{{ meta.instagram }}"/>
    <link rel="me" href="https://twitter.com/{{ meta.twitter }}"/>
    <link rel="me" href="https://facebook.com/{{ meta.facebook }}"/>
    <link rel="me" href="https://youtube.com/{{ meta.youtube }}"/>
    <link rel="me" href="https://linkedin.com/company/{{ meta.linkedin }}"/>

    <script defer src="/_assets/js/main.js"></script>

    <link rel="alternate" type="application/rss+xml" title="{{ meta.title }} Blog" href="/blog/feed.xml" />

  </head>

  <body>
    {% include 'blocks/header.njk' %}

    <div id="site-content" class="sm:ml-16">
      {{ layoutContent | safe }}

      {% include 'blocks/footer.njk' %}
    </div>
    <!-- last build: {{ data.env }} | {{ data.timestamp | formatDate('ddd, DD MMM YYYY HH:mm:ss ZZ') }} -->
  </body>
</html>
