<a class="sr-only" href="#site-content">
  Skip to site content
</a>

<header class="relative" x-data="coreNav">

  <a href="/" title="The Globe Church" class="w-[175px] h-[110px] top-[-3.2rem] uppercase font-bold no-underline fixed right-2 z-10 sm:w-fit sm:top-[-3.2rem] sm:right-4">
    <h1 class="sr-only">The Globe Church</h1>
    {% svgIcon "tgcLogoFilled", "w-full" %}
  </a>

  <div class="fixed left-0 top-0 sm:bottom-0 px-2 py-2 z-30 sm:bg-blue sm:p-4 sm:text-white sm:w-16">
    <a href="#footer" @click.prevent="toggle" class="rounded bg-white p-1 flex items-center no-underline sm:flex-col sm:bg-transparent sm:p-0 sm:mt-2 sm:text-white sm:hover:text-orange">
      <div class="w-6 h-6 flex items-center relative mr-1 sm:mb-2 sm:mr-0">
        <span x-bind:class="navOpen ? 'translate-y-0 rotate-45' : '-translate-y-2'"
              class="transform transition w-full h-1 rounded bg-current absolute"></span>

        <span x-bind:class="navOpen ? 'opacity-0 translate-x-3' : 'opacity-100'"
              class="transform transition w-full h-1 rounded bg-current absolute"></span>

        <span x-bind:class="navOpen ? 'translate-y-0 -rotate-45' : 'translate-y-2'"
              class="transform transition w-full h-1 rounded bg-current absolute"></span>
      </div>

      <span x-text="menuLabel" class="block uppercase sm:font-bold sm:rotate-90 sm:mt-4">
        Menu
      </span>
    </a>
  </div>



  <div
    class="bg-white/75 fixed z-10 inset-0"
    x-show="navOpen"
    x-transition.opacity
    x-cloak
    @click.prevent="toggle">
  </div>

  <div
    class="sm:ml-16 max-w-[90%] fixed z-20 top-0 bottom-0 transition-transform"
    x-show="navOpen"
    x-cloak
    x-transition:enter="transition duration-300 -translate-x-32"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100 -translate-x-0"
    x-transition:leave="transition ease-in duration-300"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0 -translate-x-32"
  >
    <div class="h-full w-full sm:max-w-xs flex flex-col justify-between bg-blue sm:border-l border-l-white text-white">
      <nav class="mt-10 flex flex-col gap-8 uppercase p-4 sm:mt-2">
        <a class="text-white text-xl no-underline hover:underline" href="/about">About</a>
        <a class="text-white text-xl no-underline hover:underline" href="/sundays">Sundays</a>
        <a class="text-white text-xl no-underline hover:underline" href="/calendar">Calendar</a>
        <a class="text-white text-xl no-underline hover:underline" href="/preaching">Preaching</a>
        <a class="text-white text-xl no-underline hover:underline" href="/get-involved">Get Involved</a>
        <a class="text-white text-xl no-underline hover:underline" href="/contact">Contact</a>
      </nav>

      <div class="bg-green text-white p-4 m-4">
        <p class="font-bold">Sundays at The Globe Church</p>
        <p class="my-2">Join The Globe Church this Sunday, 4pm at Globe Ark Accademy.</p>
        <p><a href="/sundays" class="text-white">Find out more</a></p>
      </div>
    </div>
  </div>
</header>


