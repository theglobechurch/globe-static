---
pagination:
    data: posts
    size: 1
    alias: posts
permalink: "blog/{{ posts.slug }}/"
layout: layouts/base.njk
eleventyComputed:
  title: "{{ posts.title.rendered }}"
---

<article class="prose lg:prose-xl">
  <h1>{{ title }}</h1>
  <div class="mainContent">
      {{ posts.content.rendered | safe }}
  </div>
</article>
